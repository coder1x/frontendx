mixin tags({hasHeader = true, hasBorder = true} = {})
  -

    const className = 'tags'
    const borderModifier = hasBorder? `${className}__frame_has-border`: ''
  div(class = `${className}`)
    if hasHeader
      span(class = `${className}__header`)
        span(class = `${className}__label`) Теги
        span(class = `${className}__amount`) 100
    div(class = `${className}__frame ${borderModifier}`) 
      ul(class = `${className}__list` style = 'transform: translateY(0%)') 
        -let n = 1
        while n <= 100
          li(class = `${className}__item`)
            a(class = `${className}__item-link` href = 'http://www.frontendx.ru')= `Тег#${n++}`
    div(class = `${className}__scrollbar`)
      div(class = `${className}__scrollbar-button ${className}__scrollbar-button_up`)
      div(class = `${className}__scrollbar-track`)
        div(class = `${className}__scrollbar-thumb`)
      div(class = `${className}__scrollbar-button ${className}__scrollbar-button_down`)


